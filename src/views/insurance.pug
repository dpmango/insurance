doctype html
html
  include shared/head.pug

  body
    .content
      include shared/header.pug

      // HERO::START
      section.hero.hero--inner.hero--with-ico(style='background-image: url(images/heroInsurance.png)')
        .container
          .row
            .col-sm-12.col-md-11.text-xs-center.text-md-right
              i.ico.ico-best-price

          .row
            .col-sm-12.text-xs-center
              .heading <span>Страхование</span><br> выезжающих за рубеж

      // section brokers
      section.brokers
        .container
          .row
            .col-sm-12.text-xs-center
              .heading Ведущие <span>страховые компании</span>
              .heading__desc Полис гарантированно подходит для подачи в визовые центры
            .brokers__wrapper
              i.ico.ico-alpha
              i.ico.ico-uralsib
              i.ico.ico-reso
              i.ico.ico-absolute
              i.ico.ico-ingos

      //INSURANCE
      section.insurance
        form(action='').container#insuranceForm
          .row
            .col-sm-12
              .insurance__wrapper
                .form-group
                  label Куда едите ?
                  input.form-control#autocompleate(type="text" placeholder="Укажите название страны:" name='insuranceCountry')
                  .ui-caption.mt10.insurance__quicklinks
                    span Например:
                    a(href='#' data-country='Шенген') Шенген,
                    a(href='#' data-country='Весь мир') Весь мир,
                    a(href='#' data-country='Франция') Франция...
                .row
                  .col-sm-6
                    .form-group
                      label Тип страховки
                      .ui-radio
                        input(type='radio' name='insuranceType' id='insuranceType_1' value='insuranceType_1' checked)
                        label(for='insuranceType_1') Разовая
                      .ui-radio
                        input(type='radio' name='insuranceType' id='insuranceType_2' value='insuranceType_2')
                        label(for='insuranceType_2') Многократная
                  .col-sm-6
                    .form-group
                      label Валюта полиса
                      .ui-radio
                        input(type='radio' name='insuranceCurrency' id='insuranceCurrency_1' value='insuranceCurrency_1' checked)
                        label(for='insuranceCurrency_1') EUR
                      .ui-radio
                        input(type='radio' name='insuranceCurrency' id='insuranceCurrency_2' value='insuranceCurrency_1')
                        label(for='insuranceCurrency_2') USD

                .row
                  .col-sm-6
                    .form-group
                      label Когда уезжаете
                      input.form-control.datepicker-here(type="text" data-position="bottom left" name="insuranceDateFrom")

                  .col-sm-6
                    .form-group
                      label Когда возвращаетесь
                      input.form-control.datepicker-here(type="text" data-position="bottom left" name="insuranceDateTo" placeholder='Обратно')

                .form-group#insuranceMultiple
                  label Выберите количество дней страхования
                    .hero__tooltip
                      i.ico.ico-tooltip-gray(data-toggle="tooltip" data-placement="bottom" title="Выберите суммарное количество дней которое вы планируете находиться за границей в течение года. Многократная страховка удобнее в использовании и дешевле нескольких однократных страховок при многократных поездках")

                  .row
                    .col-sm-12.col-lg-12
                      .green__range
                        input#greenRange(type='range' min="1" max='7' step="1" value='2')
                        .green__range__tips
                          span(data-value='1') 30 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='2') 45 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='3') 60 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='4') 90 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='5') 120 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='6') 180 <br> <span>дней</span><span class='m'>д.</span>
                          span(data-value='7') 365 <br> <span>дней</span><span class='m'>д.</span>
                .form-group
                  label Кто едет
                  .row
                    .col-sm-4
                      .ui-checkbox
                        input(type='checkbox' name='insuranceAge' id='insuranceAge_1')
                        label(for='insuranceAge_1') Взрослые (от 18 до 65)
                      .ui-select
                        span Кол-во человек
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1
                      .ui-select
                        span Возраст
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1
                    .col-sm-4
                      .ui-checkbox
                        input(type='checkbox' name='insuranceAge' id='insuranceAge_2')
                        label(for='insuranceAge_2') Дети (от 0 до 18)
                      .ui-select
                        span Кол-во человек
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1
                      .ui-select
                        span Возраст
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1

                    .col-sm-4
                      .ui-checkbox
                        input(type='checkbox' name='insuranceAge' id='insuranceAge_3')
                        label(for='insuranceAge_3') Пенсионеры (от 65)
                      .ui-select
                        span Кол-во человек
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1
                      .ui-select
                        span Возраст
                        input(type="hidden")
                        .ui-selectDrop
                          span Опция 1
                          span Опция 1
                          span Опция 1

                .form-group
                  label Страховое покрытие
                  .row
                    .col-sm-8.ui-row-checkboxes
                      .ui-radio
                        input(type='radio' name='insuranceAmount' id='insuranceAmount_1' value='30 000')
                        label(for='insuranceAmount_1') 30 000
                      .ui-radio
                        input(type='radio' name='insuranceAmount' id='insuranceAmount_2' value='50 000')
                        label(for='insuranceAmount_2') 50 000
                      .ui-radio
                        input(type='radio' name='insuranceAmount' id='insuranceAmount_3' value='100 000')
                        label(for='insuranceAmount_3') 100 000
                      .ui-caption
                        span Страховая сумма на каждого внесенного человека
                    .col-sm-4
                      a(href='#').btn.btn--green.btn--rounded.invalid Рассчитать

      //INSURANCE
      section.insurancePrice
        .container
          .row
            .col-sm-12
              .heading.text-xs-center Специальные цены для групп. <span>Звоните!</span>
          .row.mt50
            .col-sm-6.col-lg-4
              .insurancePrice__head Спокойный отдых
              .insurancePrice__row#ingosRegularPrice
                i.ico.ico-ingos.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#absoluteRegularPrice
                i.ico.ico-absolute.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#alphaRegularPrice
                i.ico.ico-alpha.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#uralsibRegularPrice
                i.ico.ico-uralsib.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#resoRegularPrice
                i.ico.ico-reso.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
            .col-sm-6.col-lg-4
              .insurancePrice__head Активный отдых
              .insurancePrice__row#ingosActivePrice
                i.ico.ico-ingos.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#absoluteActivePrice
                i.ico.ico-absolute.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#alphaActivePrice
                i.ico.ico-alpha.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#uralsibActivePrice
                i.ico.ico-uralsib.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
              .insurancePrice__row#resoActivePrice
                i.ico.ico-reso.color
                a(href='#').btn.btn--green.btn--rounded.btn--price <span></span> руб.
            .col-sm-6.col-lg-4
              .insurancePrice__head Опасные виды спорта
              a(href='#modalGetPrice').btn.btn--green.btn--rounded.btn--price.modal__trigger <span>Цена по запросу</span>

      include shared/footer.pug
    include shared/modal.pug
